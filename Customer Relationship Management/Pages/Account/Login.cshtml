@page
@model Customer_Relationship_Management.Pages.Account.LoginModel
@{
    Layout = "~/Pages/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "Login";
}

@section Styles {
    <style>
        html, body {
            height: 100%;
            margin: 0 !important;
            padding: 0 !important;
            box-sizing: border-box;
        }

        .login-bg {
            background: url('/images/loginbackground.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            width: 100vw;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .login-bg::before {
                content: "";
                position: absolute;
                inset: 0;
                background: linear-gradient(135deg, rgba(15,16,45,0.65), rgba(15,16,45,0.35));
                z-index: 1;
                pointer-events: none;
            }

        .auth-card {
            position: relative;
            z-index: 2;
            background: linear-gradient(135deg, rgba(255,255,255,0.18), rgba(255,255,255,0.08));
            border: 1px solid rgba(255,255,255,0.28);
            border-radius: 18px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.25);
            padding: 35px 30px 25px;
            max-width: 380px;
            width: 100%;
            backdrop-filter: blur(16px) saturate(160%);
            -webkit-backdrop-filter: blur(16px) saturate(160%);
        }

        .brand-title {
            font-size: 2rem;
            font-weight: 800;
            letter-spacing: 1.2px;
            color: #fff;
            margin-bottom: 6px;
            text-shadow: 0 1px 2px rgba(0,0,0,0.25);
        }

        .brand-subtitle {
            font-size: 1.02rem;
            color: rgba(255,255,255,0.85);
        }

        .input-group-lg > .form-control, .input-group-lg > .input-group-text {
            font-size: 1.08rem;
            border-radius: 12px;
        }

        .form-label {
            font-weight: 600;
            color: rgba(255,255,255,0.92);
        }

        .form-control {
            background: rgba(255,255,255,0.28);
            border: 1px solid rgba(255,255,255,0.35);
            color: #0f102d;
        }

            .form-control::placeholder {
                color: rgba(15,16,45,0.55);
            }

            .form-control:focus {
                border-color: rgba(102,123,255,0.75);
                box-shadow: 0 0 0 0.15rem rgba(102,123,255,0.25);
                background: rgba(255,255,255,0.38);
            }

        .input-group-text {
            background: rgba(255,255,255,0.35);
            border: 1px solid rgba(255,255,255,0.4);
            color: #0f102d;
        }

        .btn-login {
            width: 100%;
            background: linear-gradient(135deg, #6a82ff, #3a6cf6);
            color: #fff;
            border: 1px solid rgba(255,255,255,0.25);
            font-weight: 700;
            transition: transform .06s ease, box-shadow .2s ease, background .2s ease;
            border-radius: 10px;
            font-size: 1.08rem;
            box-shadow: 0 8px 22px rgba(58,108,246,0.33);
        }

            .btn-login:hover, .btn-login:focus {
                background: linear-gradient(135deg, #5f78ff, #2b5fe0);
                transform: translateY(-1px);
                box-shadow: 0 10px 26px rgba(58,108,246,0.45);
            }

        .login-footer {
            color: rgba(255,255,255,0.9);
        }

        .register-link {
            color: #a3b8ff;
            font-weight: 600;
            text-decoration: none;
        }

            .register-link:hover {
                text-decoration: underline;
                color: #c7d3ff;
            }

        .alert {
            padding: 9px 14px;
            margin-bottom: 20px;
            border-radius: 10px;
            font-size: 13px;
            border: 1px solid rgba(255,255,255,0.35);
            background: rgba(255,255,255,0.25);
            backdrop-filter: blur(6px);
            -webkit-backdrop-filter: blur(6px);
            color: #0f102d;
        }

        /* Modal đồng bộ UI */
        .force-modal .modal-content {
            border-radius: 18px;
            background: linear-gradient(135deg, rgba(255,255,255,0.94), rgba(255,255,255,0.88));
            border: 1px solid rgba(0,0,0,0.05);
            box-shadow: 0 16px 56px -10px rgba(0,0,0,0.38);
            backdrop-filter: blur(12px) saturate(140%);
        }

        .force-modal .modal-header {
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .force-modal .modal-title {
            font-weight: 800;
            letter-spacing: -.3px;
            color: #0f2647;
        }

        .field-label {
            font-weight: 600;
            color: #0f2647;
            font-size: .9rem;
        }

        /* Nút cập nhật mật khẩu: đổi sang tông navy phù hợp background (ảnh 2) */
        .btn-update {
            background: linear-gradient(135deg, #1C2B49 0%, #0E1C3A 100%);
            color: #fff;
            font-weight: 700;
            border: 1px solid rgba(255,255,255,0.12);
            border-radius: 10px;
            padding: .6rem 1.3rem;
            box-shadow: 0 10px 26px rgba(14,28,58,0.36);
            transition: transform .06s ease, box-shadow .2s ease, background .2s ease;
        }

            .btn-update:hover {
                background: linear-gradient(135deg, #22355A 0%, #11254A 100%);
                transform: translateY(-1px);
                box-shadow: 0 12px 30px rgba(14,28,58,0.46);
            }

            .btn-update:active {
                transform: translateY(0);
            }
    </style>
}

<div class="login-bg">
    <div class="auth-card animate__animated animate__fadeInUp">
        <div class="text-center mb-3">
            <div class="brand-title">B2B CRM</div>
            <div class="brand-subtitle">Customer Relationship Management Platform</div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="UserCode" class="form-label">Mã người dùng (UserCode)</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text"><i class="fa fa-id-badge"></i></span>
                    <input asp-for="UserCode" type="text" class="form-control" placeholder="Mã người dùng" required />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text"><i class="fa fa-key"></i></span>
                    <input asp-for="Password" type="password" id="passwordInput" class="form-control" placeholder="Nhập mật khẩu" required />
                    <button type="button" class="btn btn-outline-secondary" id="togglePwd" tabindex="-1" style="min-width:45px" aria-label="Hiện/Ẩn mật khẩu"><i class="fa fa-eye"></i></button>
                </div>
            </div>

            <!-- Đã bỏ mục "Ghi nhớ đăng nhập" theo yêu cầu -->

            <button type="submit" class="btn btn-login">Đăng nhập</button>
        </form>

        <!-- Đã bỏ phần "Chưa có tài khoản? Đăng ký" theo yêu cầu -->
    </div>
</div>

<!-- Modal ép đổi mật khẩu (bắt buộc) -->
<div class="modal fade force-modal" id="forceChangeModal" tabindex="-1" aria-labelledby="forceChangeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form method="post" asp-page-handler="ChangePassword" autocomplete="off" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <h5 class="modal-title" id="forceChangeModalLabel">Đổi mật khẩu</h5>
                <!-- Bắt buộc: không có nút đóng/hủy -->
            </div>
            <div class="modal-body">
                @if (TempData["ForceChangePasswordMsg"] is string msg)
                {
                    <div class="alert alert-warning py-2 mb-3" style="background:rgba(255,193,7,.25);border:1px solid rgba(255,193,7,.55);">
                        @msg
                    </div>
                }

                @* Hiển thị lỗi (lọc bỏ lỗi của UserCode/Password từ form login) *@
                @if (!ViewData.ModelState.IsValid)
                {
                    foreach (var kv in ViewData.ModelState)
                    {
                        if (kv.Key == nameof(Model.UserCode) || kv.Key == nameof(Model.Password)) { continue; }
                        foreach (var err in kv.Value.Errors)
                        {
                            <div class="alert alert-danger py-2 mb-2">@err.ErrorMessage</div>
                        }
                    }
                }

                <div class="mb-3">
                    <label class="field-label" for="OldPassword">Mật khẩu cũ</label>
                    <input type="password" class="form-control" name="OldPassword" id="OldPassword" required />
                </div>
                <div class="mb-3">
                    <label class="field-label" for="NewPassword">Mật khẩu mới</label>
                    <input type="password" class="form-control" name="NewPassword" id="NewPassword" required minlength="6" />
                </div>
                <div class="mb-2">
                    <label class="field-label" for="ConfirmPassword">Xác nhận mật khẩu</label>
                    <input type="password" class="form-control" name="ConfirmPassword" id="ConfirmPassword" required minlength="6" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn-update">Cập nhật mật khẩu</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('togglePwd')?.addEventListener('click', function () {
            const input = document.getElementById('passwordInput');
            const icon = this.querySelector('i');
            if (!input) return;
            if (input.type === 'password') {
                input.type = 'text';
                icon?.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                input.type = 'password';
                icon?.classList.replace('fa-eye-slash', 'fa-eye');
            }
        });

        (function () {
            // Mở modal NGAY sau POST login nếu server set flag
            var shouldOpen = @(Model.ShowForceChangeModal.ToString().ToLower()); // true/false (boolean literal)
            if (shouldOpen) {
                var el = document.getElementById('forceChangeModal');
                if (el) {
                    var modal = new bootstrap.Modal(el, { backdrop: 'static', keyboard: false });
                    modal.show();
                }
            }
        })();
    </script>
}