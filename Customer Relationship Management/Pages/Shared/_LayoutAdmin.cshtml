@{
    Layout = null;
    var userName = User.Identity?.Name ?? "Quản trị";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRM Admin</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        /* Professional Gray Theme */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f7fa;
        }

        /* Top bar: cool gray gradient */
        .admin-topbar {
            background: linear-gradient(90deg, #2f3542 0%, #464c57 50%, #58606c 100%);
            color: #fff;
            padding: 0.6rem 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.18);
            z-index: 1000;
        }

        .brand .brand-title {
            font-weight: 700;
            font-size: 1.2rem;
        }

        /* Sidebar: vertical gray gradient (seamless with top bar) */
        .admin-sidebar {
            background: linear-gradient(180deg, #2f3542 0%, #3a404b 45%, #4a515d 100%);
            min-height: 100vh;
            color: #fff;
            width: 260px;
            transition: none; /* no collapse */
            box-shadow: inset -1px 0 0 rgba(255,255,255,0.06);
        }

        .admin-sidebar .nav-link {
            color: rgba(255, 255, 255, 0.92);
            padding: 0.75rem 1rem;
            border-radius: 8px;
            transition: all 0.18s ease;
        }

        .admin-sidebar .nav-link:hover {
            background-color: rgba(255,255,255,0.12);
            color: #fff;
        }

        .admin-sidebar .nav-link.active {
            background-color: rgba(255,255,255,0.18);
            color: #fff;
            position: relative;
        }

        .admin-sidebar .nav-link.active::before {
            content: "";
            position: absolute;
            left: -6px;
            top: 10%;
            bottom: 10%;
            width: 4px;
            border-radius: 4px;
            background: linear-gradient(180deg, #ffffff, rgba(255,255,255,0.6));
        }

        /* Content: white canvas */
        .content-area {
            background-color: #ffffff;
            min-height: 100vh;
            padding: 1.5rem;
        }

        .user-panel img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        footer {
            border-top: 1px solid #e3e3e3;
            margin-top: 2rem;
            color: #6c757d;
        }
    </style>
</head>

<body>
    <!-- HEADER -->
    <header class="admin-topbar d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-3">
            <!-- Removed collapse toggle button for a fixed sidebar -->
            <div class="brand d-flex align-items-center gap-2">
                <i class="fa-solid fa-crown text-warning fs-4"></i>
                <div>
                    <div class="brand-title">CRM Admin</div>
                    <div class="small text-white-50">Bảng điều khiển hệ thống</div>
                </div>
            </div>
        </div>

        <div class="d-flex align-items-center gap-3">
            <!-- SETTINGS -->
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown">
                    <i class="bi bi-gear"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow">
                    <li><a class="dropdown-item" asp-page="/Admin/Security"><i class="bi bi-shield-lock me-2"></i> Bảo mật hệ thống</a></li>
                    <li><a class="dropdown-item" asp-page="/Admin/Backup"><i class="bi bi-hdd-stack me-2"></i> Sao lưu dữ liệu</a></li>
                </ul>
            </div>

            <!-- USER INFO DROPDOWN -->
            <ul class="navbar-nav align-items-center">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 text-white"
                       href="#"
                       id="adminProfileDropdown"
                       role="button"
                       data-bs-toggle="dropdown"
                       data-bs-auto-close="outside"
                       aria-expanded="false">
                        <i class="bi bi-person-circle fs-5"></i>
                        <span>Xin chào, <strong>@userName</strong></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0"
                        aria-labelledby="adminProfileDropdown">
                        <li>
                            <a class="dropdown-item d-flex align-items-center gap-2"
                               asp-page="/Admin/Profile/Index">
                                <i class="bi bi-person-lines-fill"></i>
                                Hồ sơ
                            </a>
                        </li>
                        <li><hr class="dropdown-divider my-1" /></li>
                        <li>
                            <form method="post" asp-page="/Account/Logout" class="m-0">
                                <button type="submit"
                                        class="dropdown-item text-danger d-flex align-items-center gap-2 w-100 border-0 bg-transparent text-start p-2">
                                    <i class="bi bi-box-arrow-right"></i>
                                    Đăng xuất
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </header>

    <div class="d-flex">
        <!-- SIDEBAR -->
        <aside class="admin-sidebar p-3" id="adminSidebar">
            <nav class="nav flex-column">
                <a class="nav-link @(ViewData["ActiveMenu"] == "Dashboard" ? "active" : "")" asp-page="/Admin/Dashboard">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a class="nav-link @(ViewData["ActiveMenu"] == "Users" ? "active" : "")" asp-page="/Admin/Account/ManageUser">
                    <i class="bi bi-people-fill me-2"></i> User Management
                </a>
                <a class="nav-link @(ViewData["ActiveMenu"] == "Security" ? "active" : "")" asp-page="/Admin/Security">
                    <i class="bi bi-shield-lock-fill me-2"></i> Role & Security
                </a>
                <a class="nav-link @(ViewData["ActiveMenu"] == "Backup" ? "active" : "")" asp-page="/Admin/Backup">
                    <i class="bi bi-hdd-fill me-2"></i> Backup & Restore
                </a>
                <a class="nav-link @(ViewData["ActiveMenu"] == "Monitoring" ? "active" : "")" asp-page="/Admin/Monitoring">
                    <i class="bi bi-graph-up-arrow me-2"></i> System Monitoring
                </a>
                <hr class="my-3 text-white-50" />
                <a class="nav-link @(ViewData["ActiveMenu"] == "Audit" ? "active" : "")" asp-page="/Admin/Audit/Index">
                    <i class="bi bi-journal-text me-2"></i> Audit Logs
                </a>
                <a class="nav-link @(ViewData["ActiveMenu"] == "Settings" ? "active" : "")" asp-page="/Admin/Settings">
                    <i class="bi bi-sliders me-2"></i> System Settings
                </a>
            </nav>
        </aside>

        <!-- CONTENT -->
        <main class="content-area flex-grow-1">
            @RenderBody()

            <footer class="pt-4 small text-muted">
                <div class="d-flex justify-content-between">
                    <div>© @DateTime.Now.Year CRM Admin Console</div>
                    <div>Bảo mật cao cấp • Hệ thống sao lưu tự động</div>
                </div>
            </footer>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
