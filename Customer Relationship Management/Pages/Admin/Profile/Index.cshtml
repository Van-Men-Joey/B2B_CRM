@page
@model Customer_Relationship_Management.Pages.Admin.Profile.IndexModel
@{
    ViewData["Title"] = "Hồ sơ Quản trị viên";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<style>
    .glass-card-admin {
        backdrop-filter: blur(10px);
        background: rgba(255,255,255,0.94);
        border-radius: 14px;
        box-shadow: 0 1px 8px rgba(44,62,80,0.08);
        color: #212529;
    }

    .heading-gradient-admin {
        background: linear-gradient(180deg, #2f3542 0%, #58606c 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        font-size: 2rem;
        letter-spacing: -0.5px;
        margin-bottom: 16px;
    }

    .profile-label {
        font-weight: 600;
        color: #111;
        letter-spacing: -.3px;
        margin-bottom: 4px;
    }

    .profile-input {
        border-radius: 8px;
    }

    .btn-gradient-admin {
        background: linear-gradient(180deg, #2f3542 0%, #58606c 100%);
        color: #fff !important;
        border: none;
        font-weight: 600;
        border-radius: 10px;
        transition: .25s;
        box-shadow: 0 4px 16px -4px rgba(47,53,66,.35);
    }

        .btn-gradient-admin:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 20px -4px rgba(47,53,66,.45);
        }

    .btn-warning {
        color: #fff !important;
        background: #ffc107 !important;
        border: none;
        font-weight: 600;
        border-radius: 10px;
    }

    .modal-title.heading-modal-admin {
        background: linear-gradient(180deg, #2f3542 0%, #58606c 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
        letter-spacing: -.3px;
    }

    .modal-content {
        border-radius: 14px;
    }
</style>

<div class="container-fluid py-4 px-3 animate__animated animate__fadeIn">
    <div class="glass-card-admin p-4 position-relative mb-4">
        <h2 class="heading-gradient-admin">Hồ sơ Quản trị viên</h2>

        @if (TempData["Success"] is string ok)
        {
            <div class="alert alert-success">@ok</div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            foreach (var entry in ViewData.ModelState)
            {
                foreach (var err in entry.Value.Errors)
                {
                    <div class="alert alert-danger">@err.ErrorMessage</div>
                }
            }
        }

        <form method="post" autocomplete="off">
            <div class="mb-3">
                <label asp-for="CurrentUser.UserCode" class="profile-label">Mã người dùng</label>
                <input asp-for="CurrentUser.UserCode" class="form-control profile-input" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="CurrentUser.FullName" class="profile-label">Họ và tên</label>
                <input asp-for="CurrentUser.FullName" class="form-control profile-input" />
            </div>
            <div class="mb-3">
                <label asp-for="CurrentUser.Email" class="profile-label">Email</label>
                <input asp-for="CurrentUser.Email" class="form-control profile-input" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="CurrentUser.Phone" class="profile-label">Số điện thoại</label>
                <input asp-for="CurrentUser.Phone" class="form-control profile-input" />
            </div>

            <div class="d-flex justify-content-end gap-3 mt-4">
                <button type="button"
                        class="btn btn-warning px-4"
                        data-bs-toggle="modal"
                        data-bs-target="#changePasswordModal">
                    🔒 Đổi mật khẩu
                </button>
                <button type="submit" class="btn btn-gradient-admin px-4">💾 Cập nhật</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal đổi mật khẩu -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" asp-page-handler="ChangePassword" autocomplete="off">
            <div class="modal-content shadow-lg">
                <div class="modal-header pb-2 pt-3">
                    <h5 class="modal-title heading-modal-admin" id="changePasswordModalLabel">Đổi mật khẩu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body pt-2">
                    <div class="mb-3">
                        <label for="OldPassword" class="profile-label">Mật khẩu cũ</label>
                        <input type="password" class="form-control profile-input" id="OldPassword" name="OldPassword" required />
                    </div>
                    <div class="mb-3">
                        <label for="NewPassword" class="profile-label">Mật khẩu mới</label>
                        <input type="password" class="form-control profile-input" id="NewPassword" name="NewPassword" required />
                    </div>
                    <div class="mb-3">
                        <label for="ConfirmPassword" class="profile-label">Xác nhận mật khẩu</label>
                        <input type="password" class="form-control profile-input" id="ConfirmPassword" name="ConfirmPassword" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-gradient-admin px-4">Cập nhật mật khẩu</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}