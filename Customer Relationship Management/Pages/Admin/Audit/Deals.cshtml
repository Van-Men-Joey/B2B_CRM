@page
@model Customer_Relationship_Management.Pages.Admin.Audit.DealsModel
@using System.Text.Json
@{
    ViewData["Title"] = "Audit Log - Deals";
    Layout = "_LayoutAdmin";

    var isManager = Model.Role == "Manager";
    var isEmployee = Model.Role == "Employee";
}

<style>
    /* Style giống Customer */
    .admin-gradient-heading {
        background: linear-gradient(90deg, #1f2937 0%, #4b5563 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
        font-size: 1.8rem;
        letter-spacing: -0.5px;
    }

    .btn-admin-gradient {
        background: linear-gradient(90deg, #374151 0%, #4b5563 100%);
        color: #fff !important;
        border: none;
        border-radius: 6px;
        transition: all .25s;
    }

        .btn-admin-gradient:hover {
            transform: scale(1.02);
            opacity: 0.9;
        }

    .glass-card-admin {
        backdrop-filter: blur(8px);
        background: rgba(47, 53, 66, 0.05);
        border-radius: 12px;
        padding: 1.2rem;
        border: 1px solid #e2e8f0;
    }

    .table-card-admin {
        background: #fff;
        border-radius: 0.5rem;
        box-shadow: 0 1px 8px rgba(44,62,80,0.04);
        border: none;
    }

    .admin-table-striped tbody tr:nth-child(odd) {
        background-color: #fafafa !important;
    }

    .added {
        background-color: #e7f9ed !important;
        font-weight: 600;
    }

    .updated {
        background-color: #fff9e5 !important;
        font-weight: 600;
    }

    .deleted {
        background-color: #fdeaea !important;
        color: #b30000 !important;
        font-weight: 600;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.35em 0.6em;
    }

    .fw-semibold {
        font-weight: 600;
    }

    .small-muted {
        color: #6b7280;
        font-size: .9rem;
    }

    .inner-change-table {
        table-layout: fixed;
        width: 100%;
    }

        .inner-change-table td {
            vertical-align: middle !important;
            font-size: 0.9rem;
            word-wrap: break-word;
        }

    .deal-key {
        text-transform: capitalize;
        color: #374151;
        font-weight: 600;
    }
</style>

@functions {
    Dictionary<string, string> ParseJson(string? json, bool forManager)
    {
        var dict = new Dictionary<string, string>();
        if (string.IsNullOrWhiteSpace(json)) return dict;

        try
        {
            if (json.Contains("\\u0022"))
                json = JsonSerializer.Deserialize<string>(json);

            using var doc = JsonDocument.Parse(json);
            foreach (var prop in doc.RootElement.EnumerateObject())
            {
                var key = prop.Name;
                var val = prop.Value.ToString() ?? "";

                if (forManager)
                {
                    if (new[] { "DealID", "DealName", "Value", "Stage", "Deadline" }.Contains(key))
                        dict[key] = val;
                }
                else
                {
                    if (key != "Customer") dict[key] = val;
                }
            }
        }
        catch { dict["RawData"] = json ?? ""; }

        return dict;
    }
}

<div class="container-fluid px-3 py-4 animate__animated animate__fadeIn">
    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="admin-gradient-heading mb-0"><i class="bi bi-handshake me-2"></i>Audit Log - Deals</h2>
            <p class="small-muted mb-0">Lịch sử thay đổi chi tiết các cơ hội kinh doanh (Deal)</p>
        </div>
        <a href="/Admin/Audit" class="btn btn-admin-gradient">
            <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
        </a>
    </div>

    <!-- CONTENT -->
    <div class="glass-card-admin">
        @if (Model.Logs == null || !Model.Logs.Any())
        {
            <div class="alert alert-info text-center my-4">
                <i class="bi bi-info-circle me-2"></i> Không có log nào được ghi lại cho bảng <b>Deals</b>.
            </div>
        }
        else
        {
            <div class="table-responsive table-card-admin p-3">
                <table class="table admin-table-striped align-middle table-bordered mb-0">
                    <thead class="table-light text-center align-middle">
                        <tr>
                            <th style="width:160px;">Thời gian</th>
                            <th style="width:100px;">Mã NV</th>
                            <th style="width:150px;">Người thao tác</th>
                            <th style="width:110px;">Hành động</th>
                            <th>Chi tiết thay đổi</th>
                            <th style="width:150px;">Địa chỉ IP</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.Logs)
                        {
                            var oldData = ParseJson(log.OldValue, isManager);
                            var newData = ParseJson(log.NewValue, isManager);
                            var allKeys = oldData.Keys.Union(newData.Keys).Where(k =>
                            !string.Equals(oldData.GetValueOrDefault(k) ?? "", newData.GetValueOrDefault(k) ?? "", StringComparison.Ordinal)
                            ).ToList();

                            var badgeClass = log.Action switch
                            {
                                Models.ActionType.Create => "success",
                                Models.ActionType.Update => "warning text-dark",
                                Models.ActionType.Delete => "danger",
                                _ => "secondary"
                            };

                            <tr>
                                <td>@log.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td class="text-center fw-semibold">@log.User?.UserCode</td>
                                <td>@(log.User?.Username ?? "Không rõ")</td>
                                <td class="text-center"><span class="badge bg-@badgeClass">@log.Action</span></td>
                                <td>
                                    @if (!allKeys.Any())
                                    {
                                        <span class="text-muted fst-italic">Không có thay đổi cụ thể</span>
                                    }
                                    else
                                    {
                                        <table class="table table-sm table-bordered mb-0 inner-change-table small">
                                            <thead class="table-light text-center">
                                                <tr>
                                                    <th style="width:30%;">Trường</th>
                                                    <th style="width:35%;">Trước</th>
                                                    <th style="width:35%;">Sau</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var key in allKeys)
                                                {
                                                    var oldVal = oldData.ContainsKey(key) ? oldData[key] : "";
                                                    var newVal = newData.ContainsKey(key) ? newData[key] : "";

                                                    string? rowClass = null;
                                                    if (string.IsNullOrEmpty(oldVal) && !string.IsNullOrEmpty(newVal)) rowClass = "added";
                                                    else if (!string.IsNullOrEmpty(oldVal) && string.IsNullOrEmpty(newVal)) rowClass = "deleted";
                                                    else if (oldVal != newVal) rowClass = "updated";

                                                    <tr class="@rowClass">
                                                        <td class="deal-key">@key</td>
                                                        <td class="text-muted">@oldVal</td>
                                                        <td class="text-dark fw-semibold">@newVal</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                </td>
                                <td class="text-center small">@log.IPAddress</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
