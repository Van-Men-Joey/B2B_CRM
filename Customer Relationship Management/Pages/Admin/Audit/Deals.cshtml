@page
@model Customer_Relationship_Management.Pages.Admin.Audit.DealsModel
@using System.Text.Json
@{
    ViewData["Title"] = "Audit Log - Deals";
    Layout = "_LayoutAdmin";
}

<style>
    /* Giữ nguyên style như Customer */
    .admin-gradient-heading {
        background: linear-gradient(90deg, #2f3542 0%, #58606c 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: bold;
        font-size: 1.8rem;
        letter-spacing: -0.5px;
    }

    .btn-admin-gradient {
        background: linear-gradient(180deg, #2f3542 0%, #58606c 100%);
        color: #fff !important;
        border: none;
        transition: .3s;
    }

    .btn-toggle {
        min-width: 140px;
    }

    .glass-card-admin {
        backdrop-filter: blur(8px);
        background: rgba(47,53,66,0.06);
        border-radius: 12px;
        padding: 1rem;
        border: 1px solid #eee;
    }

    .table-card-admin {
        background: #fff;
        border-radius: .5rem;
        box-shadow: 0 1px 8px rgba(44,62,80,0.04);
        border: none;
    }

    .admin-table-striped tbody tr:nth-child(odd) {
        background-color: #f8fbf9 !important;
    }

    .table-sm td, .table-sm th {
        padding: 0.4rem !important;
        vertical-align: middle;
    }

    .added {
        background-color: #e9f9ee !important;
        font-weight: 600;
    }

    .updated {
        background-color: #fff8e6 !important;
        font-weight: 600;
    }

    .deleted {
        background-color: #fdecea !important;
        color: #b30000 !important;
        font-weight: 600;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.35em 0.6em;
    }

    .fw-semibold {
        font-weight: 600;
    }

    .small-muted {
        color: #6c757d;
        font-size: .9rem;
    }

    .record-col {
        width: 120px;
        text-align: center;
    }

    .role-header {
        margin-bottom: .75rem;
    }
</style>

@functions {
    Dictionary<string, string> ParseJson(string? json)
    {
        var dict = new Dictionary<string, string>();
        if (string.IsNullOrWhiteSpace(json)) return dict;

        try
        {
            if (json.Contains("\\u0022"))
                json = JsonSerializer.Deserialize<string>(json);

            using var doc = JsonDocument.Parse(json);
            foreach (var prop in doc.RootElement.EnumerateObject())
            {
                // Lấy tất cả key quan trọng của Deal
                dict[prop.Name] = prop.Value.ToString();
            }
        }
        catch
        {
            dict["RawData"] = json ?? "";
        }

        return dict;
    }
}

<div class="container-fluid px-3 py-4 animate__animated animate__fadeIn">
    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="admin-gradient-heading mb-0"><i class="bi bi-handshake me-2"></i>Audit Log - Deals</h2>
            <p class="small-muted mb-0">Theo dõi thay đổi lịch sử giao dịch (Deal) hệ thống</p>
        </div>
        <a href="/Admin/Audit" class="btn btn-admin-gradient btn-admin-outline">
            <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
        </a>
    </div>

    <div class="glass-card-admin mb-3">
        <div class="card-body">
            @if (Model.Logs == null || !Model.Logs.Any())
            {
                <div class="alert alert-info text-center my-4">
                    <i class="bi bi-info-circle me-2"></i> Không có log nào được ghi lại cho bảng <b>Deals</b>.
                </div>
            }
            else
            {
                <div class="table-responsive table-card-admin p-3">
                    <table class="table admin-table-striped align-middle table-bordered mb-0">
                        <thead class="table-light text-center">
                            <tr>
                                <th style="width:160px;">Thời gian</th>
                                <th style="width:90px;">Mã NV</th>
                                <th style="width:140px;">Người thao tác</th>
                                <th style="width:100px;">Hành động</th>
                                <th>Chi tiết thay đổi</th>
                                <th style="width:150px;">IP</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.Logs)
                            {
                                var oldData = ParseJson(log.OldValue);
                                var newData = ParseJson(log.NewValue);

                                // Chỉ hiển thị những trường có thay đổi
                                var allKeys = oldData.Keys.Union(newData.Keys)
                                .Where(k => !string.Equals(
                                oldData.GetValueOrDefault(k) ?? "",
                                newData.GetValueOrDefault(k) ?? "",
                                StringComparison.Ordinal))
                                .ToList();

                                var actionClass = log.Action switch
                                {
                                    Models.ActionType.Create => "table-success",
                                    Models.ActionType.Update => "table-warning",
                                    Models.ActionType.Delete => "table-danger",
                                    _ => "table-secondary"
                                };

                                <tr class="@actionClass">
                                    <td>@log.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td class="text-center fw-semibold">@log.User?.UserCode</td>
                                    <td>@(log.User?.Username ?? "Không rõ")</td>
                                    <td class="text-center">
                                        <span class="badge bg-@(log.Action == Models.ActionType.Create ? "success"
                                                                                                                                : log.Action == Models.ActionType.Update ? "warning"
                                                                                                                                : log.Action == Models.ActionType.Delete ? "danger" : "secondary")">
                                    @log.Action
                                </span>
                            </td>
                            <td>
                                <table class="table table-sm table-bordered mb-0 small align-middle">
                                    <thead class="table-light text-center">
                                        <tr>
                                            <th style="width:30%;">Trường</th>
                                            <th style="width:35%;">Trước</th>
                                            <th style="width:35%;">Sau</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var key in allKeys)
                                                {
                                                    var oldVal = oldData.ContainsKey(key) ? oldData[key] : "";
                                                    var newVal = newData.ContainsKey(key) ? newData[key] : "";
                                                    string? rowClass = null;
                                                    if (string.IsNullOrEmpty(oldVal) && !string.IsNullOrEmpty(newVal)) rowClass = "added";
                                                    else if (!string.IsNullOrEmpty(oldVal) && string.IsNullOrEmpty(newVal)) rowClass = "deleted";
                                                    else if (oldVal != newVal) rowClass = "updated";

                                                    <tr class="@rowClass">
                                                        <td class="fw-semibold">@key</td>
                                                        <td class="text-muted">@oldVal</td>
                                                        <td class="text-dark fw-semibold">@newVal</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </td>
                                    <td class="text-center">@log.IPAddress</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
