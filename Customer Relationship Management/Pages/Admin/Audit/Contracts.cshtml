@functions {
    // Parse JSON audit log data for contracts (tùy chỉnh field)
    Dictionary<string, string> ParseJson(string? json)
    {
        var dict = new Dictionary<string, string>();
        if (string.IsNullOrWhiteSpace(json)) return dict;
        try
        {
            if (json.Contains("\\u0022"))
                json = JsonSerializer.Deserialize<string>(json);
            using var doc = JsonDocument.Parse(json);
            foreach (var prop in doc.RootElement.EnumerateObject())
            {
                if (new[] { "ContractID", "RecordID", "ContractNo", "ContractContent", "ApprovalStatus", "ApprovedAt", "ApprovedByUserID", "FilePath" }
                    .Contains(prop.Name))
                {
                    dict[prop.Name] = prop.Value.ToString();
                }
            }
        }
        catch
        {
            dict["RawData"] = json ?? "";
        }
        return dict;
    }
}

<div class="container-fluid px-3 py-4 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="admin-gradient-heading mb-0">Audit Log - Contracts</h2>
            <p class="small-muted mb-0">Theo dõi thay đổi lịch sử hợp đồng — phân tách theo vai trò Manager / Employee</p>
        </div>
        <a href="/Admin/Audit" class="btn btn-admin-gradient btn-admin-outline">
            <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
        </a>
    </div>

    <div class="glass-card-admin mb-3">
        <div class="d-flex gap-2 role-header">
            <button id="showManager" class="btn btn-admin-gradient btn-toggle">Manager Logs</button>
            <button id="showEmployee" class="btn btn-admin-gradient btn-toggle btn-outline-secondary">Employee Logs</button>
            <div class="ms-auto small-muted align-self-center">Hiển thị riêng từng bảng; mỗi bảng giới hạn 100 bản ghi mới nhất</div>
        </div>

        <!-- MANAGER LOGS -->
        <div id="managerSection" class="mb-3">
            <h5 class="mb-2">Manager — Hành động duyệt / từ chối</h5>
            @if (Model.ManagerLogs == null || !Model.ManagerLogs.Any())
            {
                <div class="alert alert-info">Không có log nào do Manager ghi.</div>
            }
            else
            {
                <div class="table-responsive table-card-admin p-2">
                    <table class="table table-hover align-middle table-bordered mb-0">
                        <thead class="table-light text-center">
                            <tr>
                                <th style="width:160px;">Thời gian</th>
                                <th style="width:110px;">Mã QL</th>
                                <th style="width:140px;">Người thao tác</th>
                                <th style="width:110px;">Hành động</th>
                                <th class="record-col">ContractID</th>
                                <th>Chi tiết thay đổi</th>
                                <th style="width:150px;">IP</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.ManagerLogs)
                            {
                                var oldData = ParseJson(log.OldValue);
                                var newData = ParseJson(log.NewValue);
                                var allKeys = oldData.Keys.Union(newData.Keys).ToList();

                                var actionClass = log.Action switch
                                {
                                    Models.ActionType.Create => "table-success",
                                    Models.ActionType.Update => "table-warning",
                                    Models.ActionType.Delete => "table-danger",
                                    _ => "table-secondary"
                                };

                                <tr class="@actionClass">
                                    <td>@log.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td class="text-center fw-semibold">@(log.User?.UserCode ?? log.UserID?.ToString() ?? "—")</td>
                                    <td>@(log.User?.Username ?? "Không rõ")</td>
                                    <td class="text-center">
                                        <span class="badge bg-@(log.Action == Models.ActionType.Create ? "success"
                                                                                                                                   : log.Action == Models.ActionType.Update ? "warning"
                                                                                                                                   : log.Action == Models.ActionType.Delete ? "danger" : "secondary")">
                                    @log.Action
                                </span>
                            </td>
                            <td class="text-center">@(!string.IsNullOrEmpty(log.RecordID) ? log.RecordID : (newData.ContainsKey("ContractID") ? newData["ContractID"] : (oldData.ContainsKey("ContractID") ? oldData["ContractID"] : "—")))</td>
                            <td>
                                <table class="table table-sm table-bordered mb-0 small align-middle">
                                    <thead class="table-light text-center">
                                        <tr><th style="width:35%;">Trường</th><th style="width:32%;">Trước</th><th style="width:33%;">Sau</th></tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var key in allKeys)
                                                {
                                                    var oldVal = oldData.ContainsKey(key) ? oldData[key] : "";
                                                    var newVal = newData.ContainsKey(key) ? newData[key] : "";
                                                    string? rowClass = null;
                                                    if (string.IsNullOrEmpty(oldVal) && !string.IsNullOrEmpty(newVal)) rowClass = "added";
                                                    else if (!string.IsNullOrEmpty(oldVal) && string.IsNullOrEmpty(newVal)) rowClass = "deleted";
                                                    else if (oldVal != newVal) rowClass = "updated";

                                                    <tr class="@rowClass">
                                                        <td class="fw-semibold">@key</td>
                                                        <td class="text-muted">@oldVal</td>
                                                        <td class="text-dark fw-semibold">@newVal</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </td>
                                    <td class="text-center">@log.IPAddress</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <!-- EMPLOYEE LOGS -->
        <div id="employeeSection" style="display:none;">
            <h5 class="mb-2">Employee — Hành động tạo hợp đồng</h5>
            @if (Model.EmployeeLogs == null || !Model.EmployeeLogs.Any())
            {
                <div class="alert alert-info">Không có log nào do Employee ghi.</div>
            }
            else
            {
                <div class="table-responsive table-card-admin p-2">
                    <table class="table table-hover align-middle table-bordered mb-0">
                        <thead class="table-light text-center">
                            <tr>
                                <th style="width:160px;">Thời gian</th>
                                <th style="width:110px;">Mã NV</th>
                                <th style="width:140px;">Người thao tác</th>
                                <th style="width:110px;">Hành động</th>
                                <th class="record-col">ContractID</th>
                                <th>Chi tiết</th>
                                <th style="width:150px;">IP</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.EmployeeLogs)
                            {
                                var oldData = ParseJson(log.OldValue);
                                var newData = ParseJson(log.NewValue);
                                var allKeys = oldData.Keys.Union(newData.Keys).ToList();

                                var actionClass = log.Action switch
                                {
                                    Models.ActionType.Create => "table-success",
                                    Models.ActionType.Update => "table-warning",
                                    Models.ActionType.Delete => "table-danger",
                                    _ => "table-secondary"
                                };

                                <tr class="@actionClass">
                                    <td>@log.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td class="text-center fw-semibold">@(log.User?.UserCode ?? log.UserID?.ToString() ?? "—")</td>
                                    <td>@(log.User?.Username ?? "Không rõ")</td>
                                    <td class="text-center">
                                        <span class="badge bg-@(log.Action == Models.ActionType.Create ? "success"
                                                                                                                                   : log.Action == Models.ActionType.Update ? "warning"
                                                                                                                                   : log.Action == Models.ActionType.Delete ? "danger" : "secondary")">
                                    @log.Action
                                </span>
                            </td>
                            <td class="text-center">@(!string.IsNullOrEmpty(log.RecordID) ? log.RecordID : (newData.ContainsKey("ContractID") ? newData["ContractID"] : (oldData.ContainsKey("ContractID") ? oldData["ContractID"] : "—")))</td>
                            <td>
                                <table class="table table-sm table-bordered mb-0 small align-middle">
                                    <thead class="table-light text-center">
                                        <tr><th style="width:35%;">Trường</th><th style="width:32%;">Trước</th><th style="width:33%;">Sau</th></tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var key in allKeys)
                                                {
                                                    var oldVal = oldData.ContainsKey(key) ? oldData[key] : "";
                                                    var newVal = newData.ContainsKey(key) ? newData[key] : "";
                                                    string? rowClass = null;
                                                    if (string.IsNullOrEmpty(oldVal) && !string.IsNullOrEmpty(newVal)) rowClass = "added";
                                                    else if (!string.IsNullOrEmpty(oldVal) && string.IsNullOrEmpty(newVal)) rowClass = "deleted";
                                                    else if (oldVal != newVal) rowClass = "updated";

                                                    <tr class="@rowClass">
                                                        <td class="fw-semibold">@key</td>
                                                        <td class="text-muted">@oldVal</td>
                                                        <td class="text-dark fw-semibold">@newVal</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </td>
                                    <td class="text-center">@log.IPAddress</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle Manager / Employee sections
        document.getElementById('showManager')?.addEventListener('click', function() {
            document.getElementById('managerSection').style.display = '';
            document.getElementById('employeeSection').style.display = 'none';
            this.classList.remove('btn-outline-secondary');
            document.getElementById('showEmployee')?.classList.add('btn-outline-secondary');
        });
        document.getElementById('showEmployee')?.addEventListener('click', function() {
            document.getElementById('managerSection').style.display = 'none';
            document.getElementById('employeeSection').style.display = '';
            this.classList.remove('btn-outline-secondary');
            document.getElementById('showManager')?.classList.add('btn-outline-secondary');
        });
    </script>
}