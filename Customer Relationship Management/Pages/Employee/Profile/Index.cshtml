@page
@model Customer_Relationship_Management.Pages.Employee.Profile.IndexModel
@{
    ViewData["Title"] = "Hồ sơ Nhân viên";
    Layout = "~/Pages/Shared/_LayoutEmployee.cshtml";
}

<style>
    .glass-card {
        backdrop-filter: blur(10px);
        background: rgba(255,255,255,0.93);
        border-radius: 14px;
        color: #212529;
        box-shadow: 0 1px 8px rgba(44,62,80,0.06);
    }

    /* Heading gradient xanh */
    .heading-gradient {
        background: linear-gradient(90deg, #007bff, #00d4ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        font-size: 2rem;
        letter-spacing: -0.5px;
        margin-bottom: 10px;
    }

    /* Nhãn bình thường – màu đen */
    .profile-label {
        font-weight: 600;
        color: #111;
        letter-spacing: -.3px;
        margin-bottom: 4px;
    }

    .profile-input {
        border-radius: 8px;
    }

    .btn-gradient {
        background: linear-gradient(45deg, #007bff, #00d4ff);
        color: #fff !important;
        border: none;
        transition: .3s;
        font-weight: 600;
    }

        .btn-gradient:hover {
            transform: scale(1.05);
            opacity: .93;
        }

    .btn-warning {
        color: #fff !important;
        background: #ffc107 !important;
        border: none;
        font-weight: 600;
    }

    /* Modal custom */
    .modal-content {
        border-radius: 14px;
    }

    .modal-title.heading-modal {
        background: linear-gradient(90deg, #007bff, #00d4ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
        letter-spacing: -.3px;
    }
</style>

<div class="container-fluid py-4 px-3 animate__animated animate__fadeIn">
    <div class="glass-card p-4 position-relative mb-4">
        <h2 class="heading-gradient">Hồ sơ Nhân viên</h2>

        @if (TempData["Success"] is string ok)
        {
            <div class="alert alert-success">@ok</div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            foreach (var m in ViewData.ModelState)
            {
                foreach (var err in m.Value.Errors)
                {
                    <div class="alert alert-danger">@err.ErrorMessage</div>
                }
            }
        }

        <form method="post" autocomplete="off">
            <div class="form-group mb-3">
                <label asp-for="CurrentUser.UserCode" class="profile-label">Mã nhân viên</label>
                <input asp-for="CurrentUser.UserCode" class="form-control profile-input" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="profile-label">Họ và tên</label>
                <input asp-for="CurrentUser.FullName" class="form-control profile-input" />
            </div>

            <div class="form-group mb-3">
                <label class="profile-label">Email</label>
                <input asp-for="CurrentUser.Email" class="form-control profile-input" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="profile-label">Số điện thoại</label>
                <input asp-for="CurrentUser.Phone" class="form-control profile-input" />
            </div>

            <div class="form-group mb-3">
                <label class="profile-label">Manager quản lý</label>
                <input class="form-control profile-input"
                       value="@(Model.CurrentUser.Manager != null
                                                                              ? (Model.CurrentUser.Manager.FullName ?? Model.CurrentUser.Manager.UserCode ?? $"#{Model.CurrentUser.Manager.UserID}")
                                                                              : "—")"
                       readonly />
            </div>

            <!-- Thông tin chi tiết Manager (không hiển thị Vai trò) -->
            @if (Model.CurrentUser.Role?.RoleName == "Employee" && Model.ManagerInfo != null)
            {
                <hr />
                <h5 class="mt-3 mb-3" style="font-weight:700;color:#007bff;">Thông tin Manager</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="profile-label">Họ và tên</label>
                        <input class="form-control profile-input" value="@Model.ManagerInfo.FullName" readonly />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="profile-label">Email</label>
                        <input class="form-control profile-input" value="@Model.ManagerInfo.Email" readonly />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="profile-label">Số điện thoại</label>
                        <input class="form-control profile-input" value="@Model.ManagerInfo.Phone" readonly />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="profile-label">Mã người dùng</label>
                        <input class="form-control profile-input" value="@Model.ManagerInfo.UserCode" readonly />
                    </div>
                </div>
            }

            <div class="d-flex justify-content-end gap-3 mt-4">
                <button type="button"
                        class="btn btn-warning px-4"
                        data-bs-toggle="modal"
                        data-bs-target="#changePasswordModal">
                    🔒 Đổi mật khẩu
                </button>
                <button type="submit" class="btn btn-gradient px-4">💾 Cập nhật</button>
            </div>
        </form>
    </div>

    <!-- Modal đổi mật khẩu -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form method="post" asp-page-handler="ChangePassword" autocomplete="off">
                <div class="modal-content shadow-lg">
                    <div class="modal-header pb-2 pt-3">
                        <h5 class="modal-title heading-modal" id="changePasswordModalLabel">Đổi mật khẩu</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body pt-2">
                        <div class="mb-3">
                            <label for="OldPassword" class="profile-label">Mật khẩu cũ</label>
                            <input type="password" class="form-control profile-input" id="OldPassword" name="OldPassword" required />
                        </div>
                        <div class="mb-3">
                            <label for="NewPassword" class="profile-label">Mật khẩu mới</label>
                            <input type="password" class="form-control profile-input" id="NewPassword" name="NewPassword" required />
                        </div>
                        <div class="mb-3">
                            <label for="ConfirmPassword" class="profile-label">Xác nhận mật khẩu</label>
                            <input type="password" class="form-control profile-input" id="ConfirmPassword" name="ConfirmPassword" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-gradient px-4">Cập nhật mật khẩu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}