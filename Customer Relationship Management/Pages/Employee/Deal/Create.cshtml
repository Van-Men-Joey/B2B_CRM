@page
@model Customer_Relationship_Management.Pages.Employee.Deal.CreateModel
@{
    ViewData["Title"] = "Tạo Deal mới";
    Layout = "_LayoutEmployee";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-plus-circle"></i> Tạo Deal mới
        </h2>
        <a asp-page="/Employee/Deal/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form method="post" class="card shadow-lg border-0 p-4 bg-light">
        <div class="mb-3">
            <label asp-for="NewDeal.DealName" class="form-label fw-semibold">Tên Deal</label>
            <input asp-for="NewDeal.DealName" class="form-control" placeholder="Nhập tên deal..." />
            <span asp-validation-for="NewDeal.DealName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewDeal.CustomerID" class="form-label fw-semibold">Khách hàng</label>
            <select asp-for="NewDeal.CustomerID" class="form-select">
                <option value="">-- Chọn khách hàng --</option>
                @if (Model.Customers != null)
                {
                    @foreach (var customer in Model.Customers)
                    {
                        <option value="@customer.CustomerID">
                            @customer.CustomerCode - @customer.CompanyName
                        </option>
                    }
                }
            </select>
            <span asp-validation-for="NewDeal.CustomerID" class="text-danger"></span>
        </div>


        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="NewDeal.Value" class="form-label fw-semibold">Giá trị Deal (VNĐ)</label>
                <input asp-for="NewDeal.Value" type="number" min="0" class="form-control" placeholder="Nhập giá trị..." />
                <span asp-validation-for="NewDeal.Value" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="NewDeal.Deadline" class="form-label fw-semibold">Hạn chót</label>
                <input asp-for="NewDeal.Deadline" type="date" class="form-control" />
                <span asp-validation-for="NewDeal.Deadline" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="NewDeal.Notes" class="form-label fw-semibold">Ghi chú</label>
            <textarea asp-for="NewDeal.Notes" class="form-control" rows="3" placeholder="Thêm ghi chú nếu có..."></textarea>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-success px-4">
                <i class="bi bi-check-circle"></i> Lưu Deal
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
