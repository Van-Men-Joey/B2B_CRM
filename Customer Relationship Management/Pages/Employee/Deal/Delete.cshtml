@page "{id:int}"
@model Customer_Relationship_Management.Pages.Employee.Deal.DeleteModel
@{
    ViewData["Title"] = "Xóa Deal";
    Layout = "_LayoutEmployee";
}

<div class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <h5 class="mb-0">Xác nhận xóa Deal</h5>
        </div>
        <div class="card-body">
            @if (Model.Deal != null)
            {
                <div class="alert alert-warning">
                    <strong>Cảnh báo:</strong> Hành động này sẽ <b>xóa Deal</b> khỏi danh sách, xác nhận thật kỹ trước khi xóa.
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Tên Deal:</dt>
                    <dd class="col-sm-9">@Model.Deal.DealName</dd>

                    <dt class="col-sm-3">Khách hàng:</dt>
                    <dd class="col-sm-9">@Model.Deal.Customer?.CompanyName</dd>

                    <dt class="col-sm-3">Giá trị:</dt>
                    <dd class="col-sm-9">@Model.Deal.Value.ToString("C0")</dd>

                    <dt class="col-sm-3">Giai đoạn:</dt>
                    <dd class="col-sm-9"><span class="badge bg-secondary">@Model.Deal.Stage</span></dd>
                </dl>

                <form method="post" class="mt-4">
                    <input type="hidden" asp-for="Deal.DealID" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-page="/Employee/Deal/Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Xác nhận xóa
                        </button>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-danger">Không tìm thấy Deal cần xóa.</div>
            }
        </div>
    </div>
</div>
