@page
@model Customer_Relationship_Management.Pages.Employee.Task.IndexModel
@{
    Layout = "/Pages/Shared/_LayoutEmployee.cshtml";
    ViewData["Title"] = "Tasks";
    ViewData["ActiveMenu"] = "Task";
}

<div class="container-fluid py-4 px-3 animate__animated animate__fadeIn">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-gradient mb-0">Công việc & Lịch hẹn</h2>
            <p class="text-muted mb-0 small">Quản lý task cá nhân, nhắc nhở và lịch meeting</p>
        </div>
        <button class="btn btn-gradient shadow-sm px-4" data-bs-toggle="modal" data-bs-target="#createTaskModal">
            Thêm Task
        </button>
    </div>

    @if (TempData["SuccessMessage"] is string sm)
    {
        <div class="alert alert-success">@sm</div>
    }
    @if (TempData["ErrorMessage"] is string em)
    {
        <div class="alert alert-danger">@em</div>
    }

    <div class="row g-3">
        <!-- Danh sách Task -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg glass-card">
                <div class="card-header bg-gradient-blue text-white d-flex align-items-center justify-content-between">
                    <h5 class="mb-0 fw-semibold">Danh sách công việc</h5>
                    <span class="small opacity-75">Giữ nhịp công việc đều đặn để đạt mục tiêu</span>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Liên quan Deal</th>
                                <th>Hạn</th>
                                <th>Trạng thái</th>
                                <th class="text-end"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Tasks.Any())
                            {
                                foreach (var t in Model.Tasks)
                                {
                                    <tr>
                                        <td class="fw-semibold">@t.Title</td>
                                        <td>@t.RelatedDeal?.DealName</td>
                                        <td>@(t.DueDate?.ToLocalTime().ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                        <td>
                                            <span class="badge bg-@(t.Status?.ToLower() == "done" ? "success" : (t.Status?.ToLower() == "in-progress" ? "warning text-dark" : "secondary"))">
                                                @t.Status
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                <input type="hidden" name="TaskIdToUpdate" value="@t.TaskID" />
                                                <div class="btn-group btn-group-sm">
                                                    <button name="NewStatus" value="Pending" class="btn btn-outline-secondary">Pending</button>
                                                    <button name="NewStatus" value="In-Progress" class="btn btn-outline-warning text-dark">In-Progress</button>
                                                    <button name="NewStatus" value="Done" class="btn btn-outline-success">Done</button>
                                                </div>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="5" class="text-muted text-center">Bạn chưa có công việc nào.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Nhắc sắp đến hạn -->
        <div class="col-lg-4">
            <div class="card glass-card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3">Nhắc sắp đến hạn</h5>
                    <ul class="list-group list-group-flush">
                        @if (Model.DueSoon.Any())
                        {
                            foreach (var t in Model.DueSoon)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="fw-semibold">@t.Title</div>
                                        <small class="text-muted">Hạn: @t.DueDate?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    <span class="badge bg-danger">Gấp</span>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-muted">Không có nhắc nhở nào.</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal tạo Task -->
<div class="modal fade" id="createTaskModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content glass-card">
            <div class="modal-header bg-gradient-blue text-white">
                <h5 class="modal-title">Tạo Task/Reminder</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Create">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Nội dung công việc</label>
                        <input asp-for="NewTask.Title" class="form-control" maxlength="200" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea asp-for="NewTask.Description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Ngày giờ thực hiện</label>
                            <input asp-for="NewTask.DueDate" type="datetime-local" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Nhắc tại</label>
                            <input asp-for="NewTask.ReminderAt" type="datetime-local" class="form-control" />
                        </div>
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Trạng thái</label>
                        <select asp-for="NewTask.Status" class="form-select">
                            <option>Pending</option>
                            <option>In-Progress</option>
                            <option>Done</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-gradient">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Đồng bộ phong cách với trang Deal */
        .btn-gradient {
            background: linear-gradient(45deg, #007bff, #00d4ff);
            color: #fff;
            border: none;
            transition: .3s;
        }

            .btn-gradient:hover {
                transform: scale(1.05);
                opacity: .9;
            }

        .text-gradient {
            background: linear-gradient(90deg, #007bff, #00c6ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .glass-card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
            border-radius: 14px;
            color: #212529;
        }

        .bg-gradient-blue {
            background: linear-gradient(45deg, #007bff, #00b4ff);
        }
    </style>
}
