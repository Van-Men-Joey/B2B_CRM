@page
@using Customer_Relationship_Management.Pages.Employee.Customer
@model Customer_Relationship_Management.Pages.Employee.Customer.CustomerModel
@{
    Layout = "/Pages/Shared/_LayoutEmployee.cshtml";
    ViewData["Title"] = "Customers";
    ViewData["ActiveMenu"] = "Customer";
}

<!-- Giao diện chính -->
<div class="container-fluid py-4 px-3 animate__animated animate__fadeIn">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-gradient mb-0">Danh sách khách hàng của bạn</h2>
            <p class="text-muted mb-0 small">Quản lý và theo dõi thông tin khách hàng của bạn</p>
        </div>
        <a href="#addCustomerSection" class="btn btn-gradient shadow-sm px-4">
            Thêm khách hàng
        </a>
    </div>

    <!-- Bộ lọc -->
    <form method="get" class="card glass-card border-0 shadow-sm mb-4">
        <div class="card-body row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-semibold">Từ khóa</label>
                <input type="text" name="keyword" value="@Model.Filter.Keyword" class="form-control shadow-sm" placeholder="Mã KH, Tên công ty, liên hệ, email..." />
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">Ngành nghề</label>
                <input type="text" name="industry" value="@Model.Filter.Industry" class="form-control shadow-sm" />
            </div>
            <div class="col-md-1">
                <label class="form-label fw-semibold">Quy mô</label>
                <input type="text" name="scale" value="@Model.Filter.Scale" class="form-control shadow-sm" />
            </div>
            <div class="col-md-1">
                <label class="form-label fw-semibold">Địa chỉ</label>
                <input type="text" name="address" value="@Model.Filter.Address" class="form-control shadow-sm" />
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">VIP</label>
                <select name="vip" class="form-select shadow-sm">
                    <option value="">Tất cả</option>
                    <option value="true" selected="@(Model.Filter.VIP == true)">⭐ VIP</option>
                    <option value="false" selected="@(Model.Filter.VIP == false)">Không</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">Khoảng thời gian</label>
                <select name="dateFilter" class="form-select shadow-sm">
                    <option value="">Tất cả</option>
                    <option value="today" selected="@(Model.Filter.DateFilter == "today")">Hôm nay</option>
                    <option value="week" selected="@(Model.Filter.DateFilter == "week")">Tuần này</option>
                    <option value="month" selected="@(Model.Filter.DateFilter == "month")">Tháng này</option>
                    <option value="year" selected="@(Model.Filter.DateFilter == "year")">Năm nay</option>
                </select>
            </div>

            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-gradient px-4">
                    Lọc
                </button>
                <a asp-page="/Employee/Customer/Customer" class="btn btn-gradient px-4 ms-2">
                    Đặt lại
                </a>
            </div>
        </div>
    </form>

    <!-- Danh sách Khách hàng -->
    <div class="card border-0 shadow-lg glass-card">
        <div class="card-header bg-gradient-blue text-white d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-semibold">Danh sách khách hàng</h5>
            <span class="small opacity-75">Giữ thông tin khách hàng đầy đủ để chốt deal hiệu quả hơn</span>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr class="text-center fw-semibold">
                        <th>VIP</th>
                        <th>Mã KH</th>
                        <th>Tên công ty</th>
                        <th>Liên hệ</th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Customers.Any())
                    {
                        foreach (var c in Model.Customers)
                        {
                            <tr class="text-center">
                                <td>@(c.VIP ? "⭐" : "")</td>
                                <td>@c.CustomerCode</td>
                                <td class="text-start fw-semibold">@c.CompanyName</td>
                                <td>@c.ContactName</td>
                                <td>@c.ContactEmail</td>
                                <td>@c.ContactPhone</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary view-detail"
                                            data-id="@c.CustomerID"
                                            data-bs-toggle="modal"
                                            data-bs-target="#customerModal"
                                            title="Xem chi tiết">
                                        Xem
                                    </button>
                                    <a asp-page="/Employee/Customer/EditCustomer" asp-route-id="@c.CustomerID"
                                       class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                        Sửa
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@c.CustomerID"
                                          onsubmit="return confirm('Xóa khách hàng này?');" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                                            Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                Chưa có khách hàng nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-transparent py-3">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                            <a class="page-link shadow-sm" asp-route-pageNumber="@(Model.CurrentPage - 1)">← Trước</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link shadow-sm" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link shadow-sm" asp-route-pageNumber="@(Model.CurrentPage + 1)">Sau →</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>

    <!-- Form thêm khách hàng -->
    <div id="addCustomerSection" class="card glass-card border-0 shadow-sm mt-4">
        <div class="card-header bg-gradient-blue text-white d-flex align-items-center">
            <h5 class="mb-0">Thêm khách hàng mới</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.CompanyName" class="form-control" placeholder="Tên công ty" />
                            <label asp-for="NewCustomer.CompanyName"></label>
                            <span asp-validation-for="NewCustomer.CompanyName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.Industry" class="form-control" placeholder="Ngành nghề" />
                            <label asp-for="NewCustomer.Industry"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.Scale" class="form-control" placeholder="Quy mô" />
                            <label asp-for="NewCustomer.Scale"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.Address" class="form-control" placeholder="Địa chỉ" />
                            <label asp-for="NewCustomer.Address"></label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.ContactName" class="form-control" placeholder="Tên người liên hệ" />
                            <label asp-for="NewCustomer.ContactName"></label>
                            <span asp-validation-for="NewCustomer.ContactName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.ContactTitle" class="form-control" placeholder="Chức vụ" />
                            <label asp-for="NewCustomer.ContactTitle"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.ContactEmail" class="form-control" placeholder="Email" />
                            <label asp-for="NewCustomer.ContactEmail"></label>
                            <span asp-validation-for="NewCustomer.ContactEmail" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.ContactPhone" class="form-control" placeholder="SĐT" />
                            <label asp-for="NewCustomer.ContactPhone"></label>
                            <span asp-validation-for="NewCustomer.ContactPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-end mt-2">
                    <button type="submit" class="btn btn-gradient px-4 py-2 shadow-sm">
                        Thêm khách hàng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal chi tiết khách hàng -->
<div class="modal fade" id="customerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg glass-card">
            <div class="modal-header bg-gradient-blue text-white">
                <h5 class="modal-title fw-bold">Chi tiết khách hàng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="customerDetailContent" class="p-2 text-center text-muted">Đang tải...</div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Đồng bộ phong cách với trang Deal */
        .btn-gradient {
            background: linear-gradient(45deg, #007bff, #00d4ff);
            color: #fff;
            border: none;
            transition: .3s;
        }

            .btn-gradient:hover {
                transform: scale(1.05);
                opacity: .9;
            }

        .text-gradient {
            background: linear-gradient(90deg, #007bff, #00c6ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .glass-card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
            border-radius: 14px;
            color: #212529;
        }

        .bg-gradient-blue {
            background: linear-gradient(45deg, #007bff, #00b4ff);
        }

        #customerDetailContent {
            color: #212529 !important;
            background-color: rgba(255,255,255,.95);
            border-radius: 8px;
            padding: 12px;
            text-align: left;
        }

        .modal-content.glass-card {
            background: rgba(255, 255, 255, .95) !important;
            color: #212529 !important;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelectorAll('.view-detail').forEach(btn => {
            btn.addEventListener('click', async () => {
                const id = btn.getAttribute('data-id');
                const res = await fetch(`/api/employee/customer/detail/${id}`);
                const data = await res.json();
                const container = document.getElementById('customerDetailContent');

                if (data) {
                    container.innerHTML = `
                        <div class="row g-3 text-start">
                            <div class="col-md-6">
                                <p><strong>Mã KH:</strong> ${data.customerCode || 'N/A'}</p>
                                <p><strong>Tên công ty:</strong> ${data.companyName}</p>
                                <p><strong>Người liên hệ:</strong> ${data.contactName || ''}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Email:</strong> ${data.contactEmail || 'Chưa có'}</p>
                                <p><strong>SĐT:</strong> ${data.contactPhone || 'Chưa có'}</p>
                                <p><strong>Ngành nghề:</strong> ${data.industry || 'N/A'}</p>
                            </div>
                            <div class="col-12">
                                <p><strong>Địa chỉ:</strong> ${data.address || 'Không có'}</p>
                                <p><strong>Ghi chú:</strong> ${data.notes || 'Không có'}</p>
                                <p><strong>VIP:</strong> ${data.vip ? '✅ Có' : '❌ Không'}</p>
                            </div>
                        </div>`;
                } else {
                    container.innerHTML = `<div class="text-danger text-center">Không thể tải dữ liệu khách hàng.</div>`;
                }
            });
        });
    </script>
}

