@page
@model Customer_Relationship_Management.Pages.Employee.Customer.CustomerModel
@{
    Layout = "/Pages/Shared/_LayoutEmployee.cshtml";
    ViewData["Title"] = "Customers";
    ViewData["ActiveMenu"] = "Customer";
}

<div class="container-fluid py-4 px-3 animate__animated animate__fadeIn">
    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- 1) Heading danh sách khách hàng -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-gradient mb-0">Danh sách khách hàng của bạn</h2>
            <p class="text-muted mb-0 small">Quản lý và theo dõi thông tin khách hàng của bạn</p>
        </div>
        <a href="#addCustomerSection" class="btn btn-gradient shadow-sm px-4">
            Thêm khách hàng
        </a>
    </div>

    <!-- 2) Thêm khách hàng mới -->
    <div id="addCustomerSection" class="card glass-card border-0 shadow-sm mb-4">
        <div class="card-header bg-gradient-blue text-white d-flex align-items-center">
            <h5 class="mb-0">Thêm khách hàng mới</h5>
        </div>
        <div class="card-body">
            <form id="addCustomerForm" method="post" asp-page-handler="Add">
                <input type="hidden" name="pageNumber" value="@Model.CurrentPage" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.CompanyName" class="form-control" placeholder="Tên công ty" />
                            <label asp-for="NewCustomer.CompanyName"></label>
                            <span asp-validation-for="NewCustomer.CompanyName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.Industry" class="form-control" placeholder="Ngành nghề" />
                            <label asp-for="NewCustomer.Industry"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.Scale" class="form-control" placeholder="Quy mô" />
                            <label asp-for="NewCustomer.Scale"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.Address" class="form-control" placeholder="Địa chỉ" />
                            <label asp-for="NewCustomer.Address"></label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.ContactName" class="form-control" placeholder="Tên người liên hệ" />
                            <label asp-for="NewCustomer.ContactName"></label>
                            <span asp-validation-for="NewCustomer.ContactName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.ContactTitle" class="form-control" placeholder="Chức vụ" />
                            <label asp-for="NewCustomer.ContactTitle"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.ContactEmail" class="form-control" placeholder="Email" />
                            <label asp-for="NewCustomer.ContactEmail"></label>
                            <span asp-validation-for="NewCustomer.ContactEmail" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCustomer.ContactPhone" class="form-control" placeholder="SĐT" />
                            <label asp-for="NewCustomer.ContactPhone"></label>
                            <span asp-validation-for="NewCustomer.ContactPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-end mt-2">
                    <button type="submit" class="btn btn-gradient px-4 py-2 shadow-sm" id="btnAddCustomer">
                        Thêm khách hàng
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 3) Bộ lọc tìm kiếm -->
    <form method="get" class="card glass-card border-0 shadow-sm mb-4">
        <div class="card-body row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-semibold">Từ khóa</label>
                <input type="text" name="Keyword" value="@Model.Filter.Keyword" class="form-control shadow-sm" placeholder="Mã KH, Tên công ty, liên hệ, email..." />
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">Ngành nghề</label>
                <input type="text" name="Industry" value="@Model.Filter.Industry" class="form-control shadow-sm" />
            </div>
            <div class="col-md-1">
                <label class="form-label fw-semibold">Quy mô</label>
                <input type="text" name="Scale" value="@Model.Filter.Scale" class="form-control shadow-sm" />
            </div>
            <div class="col-md-1">
                <label class="form-label fw-semibold">Địa chỉ</label>
                <input type="text" name="Address" value="@Model.Filter.Address" class="form-control shadow-sm" />
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">VIP</label>
                <select name="VIP" class="form-select shadow-sm">
                    <option value="" selected="@(Model.Filter.VIP == null)">Tất cả</option>
                    <option value="true" selected="@(Model.Filter.VIP == true)">⭐ VIP</option>
                    <option value="false" selected="@(Model.Filter.VIP == false)">Không</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">Khoảng thời gian</label>
                <select name="DateFilter" class="form-select shadow-sm">
                    <option value="" selected="@(string.IsNullOrEmpty(Model.Filter.DateFilter))">Tất cả</option>
                    <option value="today" selected="@(Model.Filter.DateFilter == "today")">Hôm nay</option>
                    <option value="week" selected="@(Model.Filter.DateFilter == "week")">Tuần này</option>
                    <option value="month" selected="@(Model.Filter.DateFilter == "month")">Tháng này</option>
                    <option value="year" selected="@(Model.Filter.DateFilter == "year")">Năm nay</option>
                </select>
            </div>

            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-gradient px-4">
                    Lọc
                </button>
                <a asp-page="/Employee/Customer/Customer" class="btn btn-gradient px-4 ms-2">
                    Đặt lại
                </a>
            </div>
        </div>
    </form>

    <!-- 4) Danh sách khách hàng -->
    <div class="card border-0 shadow-lg glass-card">
        <div class="card-header bg-gradient-blue text-white d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-semibold">Danh sách khách hàng</h5>
            <span class="small opacity-75">Giữ thông tin khách hàng đầy đủ để chốt deal hiệu quả hơn</span>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr class="text-center fw-semibold">
                        <th>VIP</th>
                        <th>Mã KH</th>
                        <th>Tên công ty</th>
                        <th>Liên hệ</th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Customers.Any())
                    {
                        foreach (var c in Model.Customers)
                        {
                            <tr class="text-center">
                                <td>@(c.VIP ? "⭐" : "")</td>
                                <td>@c.CustomerCode</td>
                                <td class="text-start fw-semibold">@c.CompanyName</td>
                                <td>@c.ContactName</td>
                                <td>@c.ContactEmail</td>
                                <td>@c.ContactPhone</td>
                                <td class="text-nowrap">
                                    <button class="btn btn-sm btn-outline-primary me-1 btn-view"
                                            data-id="@c.CustomerID"
                                            data-bs-toggle="modal"
                                            data-bs-target="#customerDetailModal">
                                        Xem
                                    </button>

                                    <button class="btn btn-sm btn-outline-warning me-1 btn-edit"
                                            data-id="@c.CustomerID"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editCustomerModal">
                                        Sửa
                                    </button>

                                    <button class="btn btn-sm btn-outline-danger btn-delete"
                                            data-id="@c.CustomerID"
                                            data-name="@c.CompanyName"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteConfirmModal">
                                        Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                Chưa có khách hàng nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-transparent py-3">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                            <a class="page-link shadow-sm"
                               asp-route-pageNumber="@(Model.CurrentPage - 1)"
                               asp-route-Keyword="@Model.Filter.Keyword"
                               asp-route-Industry="@Model.Filter.Industry"
                               asp-route-Scale="@Model.Filter.Scale"
                               asp-route-Address="@Model.Filter.Address"
                               asp-route-VIP="@Model.Filter.VIP"
                               asp-route-DateFilter="@Model.Filter.DateFilter">← Trước</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link shadow-sm"
                                   asp-route-pageNumber="@i"
                                   asp-route-Keyword="@Model.Filter.Keyword"
                                   asp-route-Industry="@Model.Filter.Industry"
                                   asp-route-Scale="@Model.Filter.Scale"
                                   asp-route-Address="@Model.Filter.Address"
                                   asp-route-VIP="@Model.Filter.VIP"
                                   asp-route-DateFilter="@Model.Filter.DateFilter">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link shadow-sm"
                               asp-route-pageNumber="@(Model.CurrentPage + 1)"
                               asp-route-Keyword="@Model.Filter.Keyword"
                               asp-route-Industry="@Model.Filter.Industry"
                               asp-route-Scale="@Model.Filter.Scale"
                               asp-route-Address="@Model.Filter.Address"
                               asp-route-VIP="@Model.Filter.VIP"
                               asp-route-DateFilter="@Model.Filter.DateFilter">Sau →</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<!-- Modal: Xem chi tiết -->
<div class="modal fade" id="customerDetailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg glass-card">
            <div class="modal-header bg-gradient-blue text-white">
                <h5 class="modal-title fw-bold">Chi tiết khách hàng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="customerDetailContent" class="p-2 text-start text-muted">Đang tải...</div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Sửa khách hàng -->
<div class="modal fade" id="editCustomerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg glass-card">
            <div class="modal-header bg-gradient-blue text-white">
                <h5 class="modal-title fw-bold">Chỉnh sửa thông tin khách hàng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editCustomerForm" method="post" asp-page-handler="Edit">
                    <input type="hidden" asp-for="EditCustomer.CustomerID" />
                    <input type="hidden" name="pageNumber" value="@Model.CurrentPage" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="EditCustomer.CustomerCode" class="form-control" placeholder="Mã Khách Hàng" disabled />
                                <label asp-for="EditCustomer.CustomerCode"></label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="EditCustomer.CompanyName" class="form-control" placeholder="Tên công ty" />
                                <label asp-for="EditCustomer.CompanyName"></label>
                                <span asp-validation-for="EditCustomer.CompanyName" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="EditCustomer.ContactName" class="form-control" placeholder="Liên hệ" />
                                <label asp-for="EditCustomer.ContactName"></label>
                                <span asp-validation-for="EditCustomer.ContactName" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="EditCustomer.ContactEmail" class="form-control" placeholder="Email" />
                                <label asp-for="EditCustomer.ContactEmail"></label>
                                <span asp-validation-for="EditCustomer.ContactEmail" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="EditCustomer.ContactPhone" class="form-control" placeholder="Điện thoại" />
                                <label asp-for="EditCustomer.ContactPhone"></label>
                                <span asp-validation-for="EditCustomer.ContactPhone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="EditCustomer.Industry" class="form-control" placeholder="Ngành nghề" />
                                <label asp-for="EditCustomer.Industry"></label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="EditCustomer.Scale" class="form-control" placeholder="Quy mô" />
                                <label asp-for="EditCustomer.Scale"></label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="EditCustomer.Address" class="form-control" placeholder="Địa chỉ" />
                                <label asp-for="EditCustomer.Address"></label>
                            </div>
                            <div class="form-floating mb-3">
                                <textarea asp-for="EditCustomer.Notes" class="form-control" placeholder="Ghi chú"></textarea>
                                <label asp-for="EditCustomer.Notes"></label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="EditCustomer.ContactTitle" class="form-control" placeholder="Chức vụ" />
                                <label asp-for="EditCustomer.ContactTitle"></label>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" value="@(Model.EditCustomer.VIP ? "⭐ VIP" : "Không")" disabled />
                                <label>VIP</label>
                            </div>
                        </div>
                    </div>

                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-warning px-4 py-2 shadow-sm" id="btnEditSubmit">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Xác nhận Thêm -->
<div class="modal fade" id="confirmAddModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg glass-card">
            <div class="modal-header bg-gradient-blue text-white">
                <h5 class="modal-title">Xác nhận thêm khách hàng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="confirmAddContent" class="text-start"></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-gradient" id="confirmAddBtn">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Xác nhận Sửa -->
<div class="modal fade" id="confirmEditModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg glass-card">
            <div class="modal-header bg-gradient-blue text-white">
                <h5 class="modal-title">Xác nhận cập nhật khách hàng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="confirmEditContent" class="text-start"></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-gradient" id="confirmEditBtn">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Xác nhận Xóa -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg glass-card">
            <div class="modal-header bg-gradient-blue text-white">
                <h5 class="modal-title">Xác nhận xóa khách hàng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa khách hàng: <strong id="deleteCustomerName"></strong>?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post" asp-page-handler="Delete" class="d-none">
                    <input type="hidden" name="id" id="deleteCustomerId" />
                    <input type="hidden" name="pageNumber" value="@Model.CurrentPage" />
                </form>
                <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-danger" id="confirmDeleteBtn">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .btn-gradient {
            background: linear-gradient(45deg, #007bff, #00d4ff);
            color: #fff;
            border: none;
            transition: .3s;
        }

            .btn-gradient:hover {
                transform: scale(1.05);
                opacity: .9;
            }

        .text-gradient {
            background: linear-gradient(90deg, #007bff, #00c6ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .glass-card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
            border-radius: 14px;
            color: #212529;
        }

        .bg-gradient-blue {
            background: linear-gradient(45deg, #007bff, #00b4ff);
        }

        #customerDetailContent {
            color: #212529 !important;
            background-color: rgba(255,255,255,.95);
            border-radius: 8px;
            padding: 12px;
            text-align: left;
        }

        .modal-content.glass-card {
            background: rgba(255, 255, 255, .95) !important;
            color: #212529 !important;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const qs = (s, r = document) => r.querySelector(s);
        const qsa = (s, r = document) => Array.from(r.querySelectorAll(s));

        // Load chi tiết khách hàng
        qsa('.btn-view').forEach(btn => {
            btn.addEventListener('click', async () => {
                const id = btn.getAttribute('data-id');
                const res = await fetch(`?handler=CustomerDetail&id=${id}`);
                const data = await res.json();
                const container = qs('#customerDetailContent');

                if (data) {
                    container.innerHTML = `
                        <div class="row g-3 text-start">
                            <div class="col-md-6">
                                <p><strong>Mã KH:</strong> ${data.customerCode || 'N/A'}</p>
                                <p><strong>Tên công ty:</strong> ${data.companyName || ''}</p>
                                <p><strong>Người liên hệ:</strong> ${data.contactName || ''}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Email:</strong> ${data.contactEmail || 'Chưa có'}</p>
                                <p><strong>SĐT:</strong> ${data.contactPhone || 'Chưa có'}</p>
                                <p><strong>Ngành nghề:</strong> ${data.industry || 'N/A'}</p>
                            </div>
                            <div class="col-12">
                                <p><strong>Địa chỉ:</strong> ${data.address || 'Không có'}</p>
                                <p><strong>Ghi chú:</strong> ${data.notes || 'Không có'}</p>
                                <p><strong>VIP:</strong> ${data.vip ? '✅ Có' : '❌ Không'}</p>
                            </div>
                        </div>`;
                } else {
                    container.innerHTML = `<div class="text-danger text-center">Không thể tải dữ liệu khách hàng.</div>`;
                }
            });
        });

        // Mở modal edit và đổ dữ liệu
        qsa('.btn-edit').forEach(btn => {
            btn.addEventListener('click', async () => {
                const id = btn.getAttribute('data-id');
                const res = await fetch(`?handler=CustomerDetail&id=${id}`);
                const data = await res.json();

                if (!data) {
                    alert('Không thể tải dữ liệu khách hàng để chỉnh sửa.');
                    return;
                }

                // Fill form edit
                qs('#editCustomerForm input[name="EditCustomer.CustomerID"]').value = data.customerID;
                qs('#editCustomerForm input[asp-for="EditCustomer.CustomerCode"]')?.setAttribute('value', data.customerCode || '');
                // Các input còn lại
                qs('#editCustomerForm input[name="EditCustomer.CompanyName"]').value = data.companyName || '';
                qs('#editCustomerForm input[name="EditCustomer.ContactName"]').value = data.contactName || '';
                qs('#editCustomerForm input[name="EditCustomer.ContactEmail"]').value = data.contactEmail || '';
                qs('#editCustomerForm input[name="EditCustomer.ContactPhone"]').value = data.contactPhone || '';
                qs('#editCustomerForm input[name="EditCustomer.Industry"]').value = data.industry || '';
                qs('#editCustomerForm input[name="EditCustomer.Scale"]').value = data.scale || '';
                qs('#editCustomerForm input[name="EditCustomer.Address"]').value = data.address || '';
                qs('#editCustomerForm input[name="EditCustomer.ContactTitle"]').value = data.contactTitle || '';
                qs('#editCustomerForm textarea[name="EditCustomer.Notes"]').value = data.notes || '';
            });
        });

        // Xác nhận xóa
        qsa('.btn-delete').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.getAttribute('data-id');
                const name = btn.getAttribute('data-name');
                qs('#deleteCustomerId').value = id;
                qs('#deleteCustomerName').textContent = name || '';
            });
        });
        qs('#confirmDeleteBtn')?.addEventListener('click', () => {
            qs('#deleteForm').submit();
        });

        // Xác nhận thêm
        const addForm = qs('#addCustomerForm');
        const addModalEl = qs('#confirmAddModal');
        const addModal = addModalEl ? new bootstrap.Modal(addModalEl) : null;

        addForm?.addEventListener('submit', (e) => {
            // Nếu có lỗi validation client-side, để mặc định
            if (!addForm.checkValidity()) return;
            e.preventDefault();

